
<form>
	Nombre: {{input type="Text" value=exam.nombre}}<br><br>
	Fecha: {{input type="Text" value=exam.fecha}}<br><br>
	<button {{action 'borrar'}}>Quitar</button>
	{{#link-to 'exam-detail' exam.id}}<button>Detalles</button>{{/link-to}}
	<hr>
	<h4>Preguntas</h4>
	<button {{action 'pnueva'}}>Agregar Pregunta</button>
	<ul> 
		{{#each exam.preguntas as |pregunta|}}
			{{form-question pregunta=pregunta}}
		{{/each}}
	</ul>
	<hr>
	<button {{action 'guardar'}}>Save</button>
</form>
